<VBox prefHeight="400.0" prefWidth="300.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="sample.Controller">
  <children>
    <StackPane prefHeight="150.0" prefWidth="200.0">
      <children>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#dfdfdf" height="100.0" stroke="linear-gradient(from 0.0% 0.0% to 100.0% 100.0%, 0xff0000ff 0.0%, 0x0000ffff 30.0%, 0x000000ff 100.0%)" strokeType="INSIDE" width="220.0" />
        <Text fx:id="output" />
      </children>
    </StackPane>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
      <children>
        <Button mnemonicParsing="false" onAction="#numbers" prefHeight="50.0" prefWidth="50.0" text="7" />
        <Button mnemonicParsing="false" onAction="#numbers" prefHeight="50.0" prefWidth="50.0" text="8" />
        <Button mnemonicParsing="false" onAction="#numbers" prefHeight="50.0" prefWidth="50.0" text="9" />
        <Button mnemonicParsing="false" onAction="#operators" prefHeight="50.0" prefWidth="50.0" text="/" />
      </children>
    </HBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
      <children>
        <Button mnemonicParsing="false" onAction="#numbers" prefHeight="50.0" prefWidth="50.0" text="4" />
        <Button mnemonicParsing="false" onAction="#numbers" prefHeight="50.0" prefWidth="50.0" text="5" />
        <Button mnemonicParsing="false" onAction="#numbers" prefHeight="50.0" prefWidth="50.0" text="6" />
        <Button mnemonicParsing="false" onAction="#operators" prefHeight="50.0" prefWidth="50.0" text="*" textFill="BLACK" />
      </children>
    </HBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
      <children>
        <Button mnemonicParsing="false" onAction="#numbers" prefHeight="50.0" prefWidth="50.0" text="1" />
        <Button mnemonicParsing="false" onAction="#numbers" prefHeight="50.0" prefWidth="50.0" text="2" />
        <Button mnemonicParsing="false" onAction="#numbers" prefHeight="50.0" prefWidth="50.0" text="3" />
        <Button mnemonicParsing="false" onAction="#operators" prefHeight="50.0" prefWidth="50.0" text="+" />
      </children>
    </HBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
      <children>
        <Button mnemonicParsing="false" onAction="#numbers" prefHeight="50.0" prefWidth="50.0" text="0" />
        <Button mnemonicParsing="false" onAction="#operators" prefHeight="50.0" prefWidth="50.0" text="=" />
        <Button mnemonicParsing="false" onAction="#operators" prefHeight="50.0" prefWidth="50.0" text="C" />
        <Button mnemonicParsing="false" onAction="#operators" prefHeight="50.0" prefWidth="50.0" text="-" />
      </children>
    </HBox>
  </children>
</VBox>
